/* pages/detail/detail.wxss */

.title{
  font-size: 48rpx;
  color: #1a1a1a;
  line-height: 60rpx;
  margin: 38rpx 3.5%;
}
.user-source{
  display: flex;
  flex-direction: row;
  margin: 0 3.5%;
}
.source,.time{
  font-size: 36rpx;
  color: #999;
}
.source{
  margin-right: 20rpx;
}
.content{
  margin: 20rpx 3.5% 0;
  line-height: 58rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  text-align: justify;
}
.bottomTip{
  position: fixed;
  bottom: 0;
  padding: 0 20rpx;
  width: 100%;
  height: 80rpx;
  background-color: #999;
  color: #1a1a1a;
  text-align: center;
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
}
.section{
  width: 65%;
  height: 60rpx;
  background: #f7f7f7;
  /* display: flex;
  align-items: center; */
}
.section .pingA{
  font-size: 26rpx;
  line-height: 60rpx;
  color: #333;
}
.share{
  width: 60rpx;
  height: 60rpx;
}
.shareBtn{
  background: pink;
  width: 30%;
  /* flex: 1; */
}
.shareBox{
  position: fixed;
  z-index: 2;
  bottom: 0;
  width: 100%;
  height: 400rpx;
  background-color:antiquewhite;
}

/* 遮罩 */
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}
.baocun{
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  background: #ffe200;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
}
button[class="baocun"]::after{
  border: 0;
}



/* 评论 */
.msg_box{
  background-color: #ffe200;
  padding: 10px;
  margin-bottom: 300rpx;
}
.send_box{
  /* position: fixed;
  bottom: 0; */

  display: flex;
  width: 100%;
  height: 50px
}
.input{
  background-color: #ffe200;
  border: 1px solid #aaa;
  margin-left:5px;
  border-radius:5px;
  width: 60%;
  height: 100%
}
.button{
  font-size: 16px !important;
  width: 20%;
  margin-right: 5px;
  line-height: 50px
}
.pl_input{
  color: #339999
}
.tip{
  font-size: 16px;
  width: 100%;
  text-align: center;
  margin: 10px 0 0 0;
  color: #786666
}
.msgnav{
  margin: 10px 0 0 0;
}
.msglist{
  border-bottom: 1px dashed #aaa;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  margin: 10px 10px 0 0;
}
.msg{
  float: left
}
.icon{
  float: right;
  margin: 5px 0 0 0;
}
